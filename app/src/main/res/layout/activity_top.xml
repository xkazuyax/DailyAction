<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="to.msn.wings.dailyaction.TopActivity"
    android:orientation="vertical"
    android:background="@drawable/architecture"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Top画面"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#CEF9DC"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_username"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textColor="#CEF9DC"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="マップ画面"
        android:onClick="show_map"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:background="#CEF9DC"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="記録ファイル"
        android:onClick="show_dataFile"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:background="#CEF9DC"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="スライドショー"
        android:onClick="show_slideshow"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:background="#CEF9DC"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Web検索"
        android:onClick="show_webpage"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:background="#CEF9DC"
        />
</LinearLayout>
